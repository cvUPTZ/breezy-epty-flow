
{
  "manifest_version": 3,
  "name": "Football Tracker Piano",
  "version": "1.0.0",
  "description": "Professional football event tracking interface for YouTube match videos",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*",
    "*://*.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Football Tracker Piano"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*", "*://youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "tracker-widget.html", 
        "tracker-widget.js", 
        "tracker-widget.css", 
        "supabase.js",
        "icons/icon128.png"
      ],
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
